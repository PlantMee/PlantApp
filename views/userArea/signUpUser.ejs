<!DOCTYPE html>
<html>
<head>
	 <script defer src="/fontawesome-free-5.13.0-web/js/all.js"></script>
     <link href="https://fonts.googleapis.com/css2?family=Oxygen&family=Raleway&family=Roboto:wght@400;500&display=swap" rel="stylesheet">	
    <link href="https://fonts.googleapis.com/css2?family=Merienda+One&display=swap" rel="stylesheet">
     <link href="/fontawesome-free-5.13.0-web/css/all.css" rel="stylesheet">
     <link href="/stylesheets/user/user_pages.css" rel="stylesheet">
    <!--BootsTrap CDN-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <!--Jquery CDN -->
    <script src="https://code.jquery.com/jquery-3.5.0.min.js"></script>
	<style>
	</style>
	<title>Plantae_Login</title>
</head>
<body>

    <main role="main" class="container" style="margin-top: 1%;">
       <div class="container">
         <% if(error && error.length > 0) { %>
           <div class="alert alert-danger" role="alert"><%=error %></div>
         <% } %>
         <% if(success && success.length > 0) { %>
           <div class="alert alert-success" role="alert"><%= success %></div>
         <% } %>
         <% if(info && info.length > 0) { %>
           <div class="alert alert-info" role="alert"><%= info %></div>
          <% } %>
        </div> 
    </main><!-- /.container -->

<section class="login-block">
  <div class="row">
  	<div class="col-md-6">  
		    <div id="login-overlay" class="modal-dialog">
		      <div class="modal-content" >
		        <div style="background-color: #a0e2f2;">
		          <div class="modal-header" style="margin:auto;justify-content: center;">
		              <h4 class="modal-title" id="myModalLabel">Register New user</h4>
		          </div>
		        </div>   
		            <div class="modal-body" style="margin-top:7%;">

		                <form  id="registerForm" action="/register" method="POST" >
		<!---form--->         <div class="row">
		                        <div class="col">
		                          <label for="firstName">First Name</label>
		                          <input type="text" id="firstName" name="user[firstName]" class="form-control" placeholder="First name">
		                        </div>
		                        <div class="col">
		                          <label for="lastName">Last Name</label>
		                          <input type="text" id="lastName" name="user[lastName]" class="form-control" placeholder="Last name">
		                        </div>
		                      </div>
		<!--------------------------------------separator---------------------------------------------------------------> 
		<hr style="margin-bottom:4%;"> 
		                     <div class="form-group">
		                        <label for="exampleInputEmail1">Email address</label>
		                        <input type="email" class="form-control" name="user[email]" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="example@gmail.com">
		                        <small id="emailHelp" class="form-text text-muted">**Please remember this..</small>
		                      </div>
		                      <div class="form-row">
		                        <div class="form-group col-md-6">
		                            <label for="exampleInputPassword1">Password</label>
		                            <input type="password" name="firstPass" required class="form-control" id="confirmPassword" placeholder="Password"  onkeyup='check();'>
		                        </div>
		                        <div class="form-group col-md-6">
		                            <label for="password">Re Enter Password**</label>
		                            <input type="password" name="password" class="form-control" id="password" required placeholder="Password"  onkeyup='check();'>
		                        </div>
		                      </div>
		                      
		                        <span id="message"></span>
		                      
		                      
		                      
		<!--------------------------------------separator--------------------------------------------------------------->
		<hr>                     <div class="form-row">                             
		                             <div class="form-group col-md-5">
		                                <label for="phoneNo">Phone**</label>
		                                <input type="Number" name="user[phone]" class="form-control" id="phoneNo" placeholder="+91 __________  " min="6000000000" pattern="{10,10}" title="Phone Number Should Contain 10 digits" required>
		                            </div>
		                            <div class="form-group col-md-6 form-check-inline" style="margin-bottom: 0;margin-top:5%;">
		                               <label>Gender</label>
		                                <div class="form-check">
		                                  <input class="form-check-input" type="radio" name="user[gender]" id="male" value="Male" checked>
		                                  <label class="form-check-label" for="male">
		                                   Male<span>&nbsp </span>
		                                  </label>
		                                </div>
		                                <div class="form-check form-check-inline">
		                                  <input class="form-check-input" type="radio" name="user[gender]" id="female" value="Female" >
		                                  <label class="form-check-label" for="female">
		                                    Female
		                                  </label>
		                                </div>
		                             </div>
		                        </div>
		                                            
		                  <div class="form-group">
		                  <div class="input-group-addon text-center">
		                      <input type="submit" name="submit" id="submit" value="Submit" class="btn btn-success pull-right">                  
		                  </div>
		                </div>
		                </form>
		              </div><!---modal-body--->
		          </div>
		      </div>
		    </div>
		    <div class="col-md-6">
		    	<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
				  <ol class="carousel-indicators">
				    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
				    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
				    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
				  </ol>
				  <div class="carousel-inner">
				    <div class="carousel-item active">
				      <img class="d-block w-100" src="	" alt="First slide">
				    </div>
				    <div class="carousel-item">
				      <img class="d-block w-100" src="..." alt="Second slide">
				    </div>
				    <div class="carousel-item">
				      <img class="d-block w-100" src="..." alt="Third slide">
				    </div>
				  </div>
				  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
				    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
				    <span class="sr-only">Previous</span>
				  </a>
				  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
				    <span class="carousel-control-next-icon" aria-hidden="true"></span>
				    <span class="sr-only">Next</span>
				  </a>
				</div>
		    </div>
		</div>
</section>

<script>
    var check = function() {
    var password =document.getElementById('password')
    var confirmPassword= document.getElementById('confirmPassword')
        if(password.value){    
            if (password.value === confirmPassword.value) {
            document.getElementById('message').style.color = 'green';
            document.getElementById('message').innerHTML = 'Passwords Match';
          } else {
            document.getElementById('message').style.color = 'red';
            document.getElementById('message').innerHTML = 'Passwords do not match';
          }
        }
    }
</script>

</body>
</html>